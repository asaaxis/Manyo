<h1>タスク一覧</h1>

<p><%= notice %></p>

<%= form_with(url: tasks_path, method: :get, scope: :task, local: true) do |form| %>
  <%= form.text_field :title %>
  <%= form.submit 'search', name: nil %>
  <%= form.select 'status', Task.statuses.keys.to_a, include_blank: "ステータス" %>
<% end %>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>終了期限</th>
    <th>ステータス</th>
    <th>優先度</th>
  </tr>
  <% @tasks.each do |task| %> 
    <tr>
      <td><%= task.title %></td>
      <td><%= task.content %></td>
      <td><%= task.limit %></td>
      <td><%= task.status %></td>
      <td><%= task.priority %></td>
      <td><%= link_to '詳細', task_path(task.id) %></td>
      <td><%= link_to '編集', edit_task_path(task.id) %></td>
      <td><%= link_to '削除', task_path(task.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
    </tr>
  <% end %>
</table>
  <%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %> 
  <%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %> |
  <%= link_to '新しくタスクを投稿する', new_task_path %>