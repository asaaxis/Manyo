<h1>管理者画面・ユーザー一覧</h1>


<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
    <th>管理者権限</th>
    <th>投稿数</th>
  </tr>
  <% @users.each do |user| %> 
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= user.admin%></td>
    <td><%= user.tasks.count%>
    <td><%= link_to '詳細', admin_user_path(user.id) %></td>
    <td><%= link_to '編集', edit_admin_user_path(user.id) %></td>
    <td><%= link_to '削除', admin_user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>
<%= link_to 'ユーザー新規登録', new_admin_user_path %>