<h1>管理者画面のユーザー一覧</h1>


<table>
  <tr>
    <th>名前</th>
    <th>メールアドレス</th>
  </tr>
  <% @users.each do |user| %> 
  <tr>
    <td><%= user.name %></td>
    <td><%= user.email %></td>
    <td><%= link_to '詳細', user %></td>
    <td><%= link_to '削除', user_path(user.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
  <% end %>
</table>